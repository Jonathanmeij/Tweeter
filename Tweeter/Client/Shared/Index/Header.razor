<div class="flex  gap-3 w-full">
    <div>
        <div class="w-12 h-12 rounded-full bg-slate-600 flex-self"></div>
    </div>
    
    <div class="flex flex-col gap-3 w-full">
        <div class=""></div>
        <input @bind="@InputValue" @oninput="UpdateButtonState" class="bg-transparent outline-none focus:ring-0 text-lg" placeholder="what is happening?"/>
        <div class="border-b border-slate-700 w-full"></div>
        <button class="w-min ml-auto bg-blue-500 px-3 py-1 transition-all duration-300 rounded-full  font-semibold disabled:opacity-50" disabled="@IsButtonDisabled">Tweet</button>
    </div>
</div>

@code {
    private string InputValue { get; set; }
    private bool IsButtonDisabled { get; set; } = true;
    
    private void UpdateButtonState(ChangeEventArgs e)
    {
        InputValue = e.Value.ToString();
        IsButtonDisabled = string.IsNullOrWhiteSpace(InputValue);
    }
}